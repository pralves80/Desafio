@model IEnumerable<Desafio.Models.Filme>

@{
    ViewData["Title"] = "Listagem dos Filmes";
}
   
<form asp-controller="Filme" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table" id="tblFilmes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.poster_path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
               Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src=@Html.DisplayFor(modelItem => item.poster_path) width=60 height=60>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.ActionLink("Detalhe", "Detalhe", new { id = item.id }) 
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script>
    $('#tblFilmes').DataTable({
        "pagingType": "numbers",
        "searching": false,
        "info": false,
        "bLengthChange": false,
    });
 </script>
}
